<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sign_doc_sign_custom" inherit_id="sign.doc_sign"
        name="Custom Sign Document Header">
        <!-- Replace the o_odoo div with company logo -->
        <xpath expr="//div[@class='o_odoo']" position="replace">
            <div class="o_logo d-flex">
                <a href="/">
                    <img t-attf-src="/logo.png?company={{ company_id }}" alt="Logo" />
                </a>
            </div>
        </xpath>

    </template>
</odoo>