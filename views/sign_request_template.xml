<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sign_doc_sign_custom" inherit_id="sign.doc_sign"
        name="Custom Sign Document Header">
        <!-- Replace the o_odoo div with company logo -->
        <xpath expr="//div[@class='o_odoo']" position="replace">
            <div class="o_odoo">
                <a href="/">
                    <img t-attf-src="/logo.png?company={{ company_id }}" alt="Logo" />
                </a>
            </div>
        </xpath>

        <!-- Remove the first o_logo div -->
        <xpath
            expr="//div[@class='o_logo_wrapper justify-content-start d-flex']/div[@class='o_logo d-flex']"
            position="replace" />

        <!-- Optional: Center the logo wrapper -->
        <xpath expr="//div[@class='o_logo_wrapper justify-content-start d-flex']"
            position="attributes">
            <attribute name="class">o_logo_wrapper justify-content-center d-flex w-100</attribute>
        </xpath>
    </template>
</odoo>